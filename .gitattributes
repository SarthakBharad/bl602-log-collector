# Auto detect text files and normalize line endings to LF
* text=auto

# Code files
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.py text eol=lf
*.js text eol=lf
*.html text eol=lf
*.css text eol=lf
*.md text eol=lf

# Config files
*.conf text eol=lf
*.ini text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Certificates (binary-like, preserve as-is)
*.crt text eol=lf
*.key text eol=lf
*.pem text eol=lf
*.der binary
*.csr text eol=lf
*.srl text eol=lf

# Binaries
*.bin binary
*.hex binary
*.o binary
*.a binary
*.so binary
*.db binary

# Documents
LICENSE text eol=lf
README.md text eol=lf
*.txt text eol=lf
